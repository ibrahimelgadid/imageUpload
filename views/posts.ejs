<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/css.css">
</head>
<body>

    <h2> Posts</h2>
    <a href="/posts/addPost" class='btn btn-primary'> New post</a>
    <br><br>

    <table class='table table-striped'>
    <% if(count > 0){ %>
        <thead>
            <tr>
                <th>Title</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        
            <% posts.forEach(function(post){   %>
                <tr>
                    <td><%= post.title %></td>
                    <%if(post.image == ''){ %>
                        <td><img style='width:100px; height:100px' src="images/noimage.png" alt="" id='noimage'></td>
                    <% }else{%>
                    
                        <td><img src="product_img/<%- post._id %>/<%- post.image%>" alt="<%- post.title %>" id='imgPreview'></td>
                    <% };%>

                    <td> <a href="/posts/edit/<%- post._id %>">Edit</a> </td>
                    <td> <a href="/posts/delete/<%- post._id %>">Delete</a> </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <%}else{%>
            <h3>no product</h3>
        <%}%>


<script src="js/js.js"></script>
</body>
</html>

